{
    "compilerOptions": {
        "target": "esnext",
        "module": "ESNext",
        "moduleResolution": "nodenext",
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "jsx": "preserve",
        "jsxFragmentFactory": "Fragment",
        "jsxImportSource": "hono/jsx",
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ]
}